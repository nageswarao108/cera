@model CeraWebApplication.Models.CeraUserModel

@{
    Layout = "~/Views/Shared/_ResourcesLayout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <ul class="cera-breadCrumb">
            <li><a asp-controller="Cera" asp-action="DashBoard">Home </a></li>
            <li><a href="#">Admin</a></li>
            <li>Delete User</li>
        </ul>
    </div>
    <div class="col-md-8 text-right">
        <div>
            <a asp-controller="Cera" asp-action="ManageUsers" class="back_toList">Back to List</a>
        </div>
    </div>
</div>
<div class="cera-rightContent">
    <h3 class="main_h">Delete User</h3>
    <h3>Are you sure you want to delete this User: <b>@Model.UserName </b></h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmailId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmailId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Roles)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Roles[0])
            </dd>
        </dl>

        <form asp-action="DeleteUser">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
        </form>
    </div>
</div>