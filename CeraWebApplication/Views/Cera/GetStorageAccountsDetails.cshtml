@model List<CeraWebApplication.Models.CeraStorageAccount>

@{
    Layout = "~/Views/Shared/_ResourcesLayout.cshtml";
    //ViewData["Title"] = "Login";
}


<div>
    <div class="row">
        <div class="col-md-4">
            <ul class="cera-breadCrumb">
                <li><a asp-controller="Cera" asp-action="DashBoard">Home </a></li>
                <li><a href="#">Resources</a></li>
                <li>Storage Accounts</li>
            </ul>
        </div>
    </div>
    <div class="cera-rightContent">
        <h3 class="main_h">Storage Accounts </h3>
        <table class="table display" id="example" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>


                    <th>
                        ResourceGroupName
                    </th>

                    <th>
                        RegionName
                    </th>
                </tr>
            </thead>
            <tbody id="ddlStorage">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResourceGroupName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegionName)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

