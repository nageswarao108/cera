@model List<CeraWebApplication.Models.CeraResourceHealth>
    <style>
        .my-custom-scrollbar {
            position: relative;
            height: 280px;
            overflow: auto;
        }
        .table-wrapper-scroll-y {
            display: block;
        }
    </style>
    <div>
        <div class="row">
            <div class="col-md-8 table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-responsive table-striped table-hover" style="margin-top:1%">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Location
                            </th>
                            <th>
                                Availability Status
                            </th>
                            <th>
                                Type
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AvailabilityState)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-4">
                <img src="https://apexcharts.com/wp-content/uploads/2018/05/simple-pie-chart.svg" style="height:300px;" />
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <img src="https://image.freepik.com/free-vector/colored-world-map-political-maps-colourful-world-countries-country-names-illustration_102902-1693.jpg" style="height:300px;" />
            </div>
            <div class="col-md-4">
                <img src="https://apexcharts.com/wp-content/uploads/2018/05/simple-pie-chart.svg" style="height:300px;" />
            </div>
        </div>
    </div>
