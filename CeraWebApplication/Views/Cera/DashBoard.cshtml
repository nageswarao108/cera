@model List<CeraWebApplication.Models.CeraDashboardModel>
    <style>
        .my-custom-scrollbar {
            position: relative;
            height: 280px;
            overflow: auto;
        }
        .table-wrapper-scroll-y {
            display: block;
        }
    </style>
<h2>Dashboard</h2>
<hr />
    <div>
        <div class="row">
            <div class="col-md-8">
                <h4>Resources Overview</h4>
                <div class="table-wrapper-scroll-y my-custom-scrollbar">
                    <table class="table table-striped table-hover" style="margin-top:1%">
                        <thead>
                            <tr>
                                <th>
                                    Resources
                                </th>
                                <th>
                                    Count
                                </th>
                                <th>
                                    Health
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.resources)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.count)
                                    </td>
                                    <td>
                                        <a href="Cera/GetResourceHealth">
                                            @Html.DisplayFor(modelItem => item.health)
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-4">
                <h4>Resource Spend</h4>
                <img src="https://apexcharts.com/wp-content/uploads/2018/05/simple-pie-chart.svg" style="height:300px;" />
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <img src="https://image.freepik.com/free-vector/colored-world-map-political-maps-colourful-world-countries-country-names-illustration_102902-1693.jpg" style="height:300px;" />
            </div>
            <div class="col-md-4">
                <img src="https://apexcharts.com/wp-content/uploads/2018/05/simple-pie-chart.svg" style="height:300px;" />
            </div>
        </div>
    </div>
