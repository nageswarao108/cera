<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CeraWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CeraWebApplication</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cera" asp-action="LandingPage">Home</a>
                        </li>
                   
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="row">

        <div class="col-md-2">
            <div class="container body">
                <div class="main_Container">

                    <div class="left_col scroll-view">
                        <div class="navbar nav_title" style="margin-left: -2px;">
                            <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                                <div class="menu_section">
                                    <ul class="nav side-menu">

                                        <li>
                                            <a asp-controller="Cera" asp-action="DashBoard">
<img src="https://freepikpsd.com/wp-content/uploads/2019/10/overview-icon-png-5-Transparent-Images.png"style="width:30px;height:30px;" />Overview <span class="fa fa-chevron-down"></span></a>
                                            <hr />
                                            <ul class="nav child_menu">
                                                <li>
                                                    <a asp-controller="Cera" asp-action="GetResourceDetails" style="display: inline-flex;width: 100% !important;">
                                                        <img src="https://www.vhv.rs/dpng/d/432-4323159_azure-resource-group-icon-arm-azure-resource-manager.png" style="width:30px;height:20px;" />
                                                        <span style="font-size: 14px !important;margin-left: 3%;">Resources</span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a asp-controller="Cera" asp-action="GetVmDetails" style="display: inline-flex;width: 100% !important;">
                                                        <img src="https://bobpusateri.blob.core.windows.net/bcn/2020/04/Azure_VM.png" style="width:30px;height:20px;" />
                                                        <span style="font-size: 14px !important;margin-left: 3%;">VM</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Cera" asp-action="GetStorageAccountsDetails" style="display: inline-flex;width: 100% !important;">
                                                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTeV3Fv0vHwFFU2QAN42lNboDzlyappVURMag&usqp=CAU" style="width:30px;height:20px;" />
                                                        <span style="font-size: 14px !important;margin-left: 3%;">StorageAccounts</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Cera" asp-action="GetResourceGroupDetails" style="display: inline-flex;width: 100% !important;">
                                                        <img src="https://www.vhv.rs/dpng/d/432-4323159_azure-resource-group-icon-arm-azure-resource-manager.png" style="width:30px;height:20px;" />
                                                        <span style="font-size: 14px !important;margin-left: 3%;">ResourceGroups</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Cera" asp-action="GetWebAppsDetails" style="display: inline-flex;width: 100% !important;">
                                                        <img src="https://img.favpng.com/9/7/19/microsoft-azure-web-sites-web-application-png-favpng-ceQYNWUnpNGwGmRpJRpC1a0j4.jpg" style="width:30px;height:20px;" />
                                                        <span style="font-size: 14px !important;margin-left: 3%;">WebApps</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-10">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
       
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CeraWebApplication - <a asp-area="" asp-controller="Cera" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
