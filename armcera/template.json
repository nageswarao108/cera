        "servers_cera_name": {
            "defaultValue": "cera",
            "type": "String"
        },
        "administratorLoginPassword": {
          "type": "securestring",
          "metadata": {
          "description": "The administrator password of the SQL logical server."
          }
        },
        "sites_CERADataAPI_name": {
            "defaultValue": "CERADataAPI",
            "type": "String"
        },
        "sites_CERASyncAPI_name": {
