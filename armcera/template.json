    "contentVersion": "1.0.0.0",
    "parameters": {
        "sites_Cera_name": {
            "defaultValue": "Cera",
            "type": "String"
        },
        "servers_cera_name": {
            "defaultValue": "cera",
            "type": "String"
        },
        "administratorLoginPassword": {
            "type": "securestring",
            "metadata": {
            "description": "The administrator password of the SQL logical server."
            }
        },
        "sites_CERADataAPI_name": {
            "defaultValue": "CERADataAPI",
            "type": "String"
        },
        "sites_CERASyncAPI_name": {
            "defaultValue": "CERASyncAPI",
            "type": "String"
        },
        "components_CERA_name": {
            "defaultValue": "CERA",
            "type": "String"
        },
        "serverfarms_CERAPlan_name": {
            "defaultValue": "CERAPlan",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/actionGroups",
            "apiVersion": "2019-06-01",
            "name": "[parameters('actionGroups_Application_Insights_Smart_Detection_name')]",
            "location": "Global",
            "properties": {
                "groupShortName": "SmartDetect",
                "enabled": true,
                "emailReceivers": [],
                "smsReceivers": [],
                "webhookReceivers": [],
                "itsmReceivers": [],
                "azureAppPushReceivers": [],
                "automationRunbookReceivers": [],
                "voiceReceivers": [],
                "logicAppReceivers": [],
